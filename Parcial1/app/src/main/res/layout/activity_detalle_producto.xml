<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetalleProducto">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_precio"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="57dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_marca"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="124dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_categoria"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="31dp" android:layout_marginStart="23dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_marca"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_descuento"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="46dp" android:layout_marginStart="23dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_categoria"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_rating"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="46dp" android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_descuento"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txt_stock"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp" android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_rating"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" android:id="@+id/img_imagen"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="139dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="56dp" app:layout_constraintTop_toBottomOf="@+id/txt_rating"
            android:layout_marginBottom="141dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>