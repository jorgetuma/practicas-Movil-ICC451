<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Agregar tarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_agregar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="9dp" android:layout_marginBottom="30dp" android:onClick="agregarTarea"/>
    <Button
            android:text="RecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_rv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="27dp" android:layout_marginBottom="30dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ListView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp" android:id="@+id/appListView" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>