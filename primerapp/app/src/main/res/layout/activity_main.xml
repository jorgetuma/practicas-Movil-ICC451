<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Enviar"
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:id="@+id/btn_send"
            android:onClick="sendMesage"
            app:iconTint="#FFFFFF" app:rippleColor="#3E3737" app:strokeColor="#514848"
            android:textColorHighlight="#1E1C1C" android:textColorLink="#5C5757"
            app:layout_constraintEnd_toStartOf="@+id/btn_clear" app:layout_constraintTop_toTopOf="@+id/btn_clear"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="23dp" app:layout_constraintBottom_toBottomOf="@+id/btn_clear"
            android:layout_marginEnd="128dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_nombre"
            android:hint="Digite un nombre..."
            android:layout_marginTop="39dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_apellido"
            android:hint="Digite un apellido..."
            android:layout_marginTop="60dp"
            android:layout_marginBottom="52dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_nombre" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/spn_genero"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    <Button
            android:text="limpiar"
            android:layout_width="wrap_content"
            android:layout_height="40dp" android:id="@+id/btn_clear"
            app:layout_constraintStart_toEndOf="@+id/btn_send" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="7dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="37dp"/>
    <TextView
            android:text="Genero:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:layout_marginTop="170dp"
            app:layout_constraintEnd_toStartOf="@+id/spn_genero" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="17dp"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="22dp" android:id="@+id/spn_genero"
            android:layout_marginTop="133dp"
            app:layout_constraintStart_toEndOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="128dp" app:layout_constraintTop_toTopOf="@+id/txt_nombre"
            app:layout_constraintBottom_toBottomOf="@+id/datePicker" android:layout_marginEnd="26dp"
            android:entries="@array/generos"
    />
    <TextView
            android:text="Nacimiento:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:layout_marginTop="62dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toStartOf="@+id/datePicker"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="13dp"/>
    <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="0dp"
            android:layout_height="101dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="@+id/textView2"
            android:layout_marginEnd="37dp"
    />
    <TextView
            android:text="Le gusta programar?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/datePicker"
            app:layout_constraintEnd_toStartOf="@+id/rgbtn_botones" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="9dp" android:layout_marginEnd="21dp"
    />
    <RadioGroup
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:id="@+id/rgbtn_botones" android:checkedButton="@id/rbtn_si"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/datePicker" app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/cbx_python" android:layout_marginEnd="23dp"
    >
        <RadioButton
                android:text="Si"
                android:layout_width="90dp"
                android:layout_height="26dp" android:id="@+id/rbtn_si"/>
        <RadioButton
                android:text="No"
                android:layout_width="97dp"
                android:layout_height="match_parent" android:id="@+id/rbtn_no"/>
    </RadioGroup>
    <TextView
            android:text="Lenguaje:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/cbx_Java" android:layout_marginStart="30dp"/>
    <CheckBox
            android:text="Java"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cbx_Java"
            app:layout_constraintStart_toStartOf="@+id/cbx_js"
            android:layout_marginStart="5dp" android:layout_marginBottom="18dp"
            app:layout_constraintBottom_toTopOf="@+id/cbx_js"/>
    <CheckBox
            android:text="JS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cbx_js"
            app:layout_constraintStart_toStartOf="@+id/cbx_clang"
            android:layout_marginStart="8dp" android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toTopOf="@+id/cbx_clang"/>
    <CheckBox
            android:text="C/C++"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cbx_clang"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/cbx_golang" app:layout_constraintEnd_toStartOf="@+id/cbx_golang"
            android:layout_marginEnd="65dp"/>
    <CheckBox
            android:text="Python"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cbx_python"
            android:layout_marginTop="62dp"
            app:layout_constraintTop_toBottomOf="@+id/datePicker" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/rgbtn_botones"
            android:layout_marginStart="88dp" android:layout_marginEnd="87dp"/>
    <CheckBox
            android:text="Golang "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cbx_golang"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/cbx_python" app:layout_constraintEnd_toEndOf="@+id/cbx_python"/>
    <CheckBox
            android:text="C#"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cbx_csharp"
            app:layout_constraintStart_toStartOf="@+id/cbx_golang" android:layout_marginTop="22dp"
            android:layout_marginStart="7dp"
            app:layout_constraintTop_toBottomOf="@+id/cbx_golang"/>
</androidx.constraintlayout.widget.ConstraintLayout>